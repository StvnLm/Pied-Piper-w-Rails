<div class="container">
  <div class="row">

    <% if user_signed_in? %>
      
      <!--User Profile-->
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
            <% if current_user.profile %>
              <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: "btn btn-primary btn-lg btn-block" =%>
              <%= link_to "View your profile", user_path(current_user.id), class: "btn btn-primary btn-lg btn-block" =%>
            <% else %>
              <P>Create your profile to share with the community</P>
              <%= link_to "Create your profile", new_user_profile_path(user_id: current_user.id), class: "btn  btn-primary btn-lg btn-block" =%>
            <% end %>
          </div>
      </div>

      <!--The Community-->
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Community</h2>
          <%= link_to "Visit The Community", "#", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      </div>
      
    <% else %>
      <h2 class="text-center">PlaceHolder Title Text</h2>
    <% end %>
  </div>
</div>
